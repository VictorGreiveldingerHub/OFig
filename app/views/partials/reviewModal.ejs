<!-- Modale des avis -->
<main class="modal fade" id="reviewsModal" tabindex="-1" role="dialog" aria-labelledby="reviewsModalLabel" aria-hidden="true">
    <section class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="reviewsModalLabel">Avis des internautes</h3>
          <a href="/article/<%=reviewId%>">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span> 
            </button>
          </a>
        </div>
        <div class="modal-body">
          <% for (let review of reviews) {%>
          <section>
            <h5><%=review.title%> &nbsp; <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small></h5>
            <p class="review-author">par <%=review.author%></p>
            <p><%=review.message%></p>
          </section>

          <hr>
          <% } %>
        </div>
        <div class="modal-footer">
          <a href="/article/<%=reviewId%>">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
          </a>
        </div>
      </div>
    </section>
</main>