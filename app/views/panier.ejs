<%- include('partials/header') %>

  <!-- Page Content -->
  <div class="container container-main">

      <div class="row">
        <div class="col">
          <h3 class="text-center">Votre Panier</h3>

          <table class="table">
            <thead>
              <th>Article</th>
              <th>Quantit√©</th>
              <th>Prix HT</th>
            </thead>
            <tbody>
              <% for (let goodFigurine of goodFigurines) { %>
              <tr>
                <td>
                  <img class="img-thumbnail img-cart-list" src="/images/<%=goodFigurine.name.toLowerCase()%>.png" alt="">
                  <div class="item-description">
                      <h5 class="item-title"><%=goodFigurine.name%></h5>
                      <p class="item-prize">$<%=goodFigurine.price%></p>
                  </div>
                </td>

                <td>
                  <strong><%=goodFigurine.quantity%></strong>
                  <a href="/cart/add/<%= goodFigurine.id%>">+</a> / <a href="/cart/delete/<%= goodFigurine.id%>">-</a>
                </td>

                <td>
                  <p class="item-subtotal">$<%=goodFigurine.price * goodFigurine.quantity%></p>
                </td>
              </tr>
              <% } %>
              <!-- Frais de port -->
              <tr>
                <td class="text-right" colspan="2">
                  Frais de port
                </td>
                <td class="item-subtotal">
                  $9.99
                </td>
              </tr>

              <tfoot>
                <tr>
                  <td class="text-right" colspan="2">
                    Total HT
                  </td>
                  <td class="item-subtotal">
                    $<%= totalHT.toFixed(2) %>
                  </td>
                </tr>

                <tr>
                  <td class="text-right" colspan="2">
                    TVA 20%
                  </td>
                  <td class="item-subtotal">
                    $<%= tva.toFixed(2) %>
                  </td>
                </tr>

                <tr class="row-total">
                  <td class="text-right" colspan="2">
                    Total TTC
                  </td>
                  <td class="item-total">
                    $<%= totalTTC.toFixed(2) %>
                  </td>
                </tr>

              </tfoot>

            </tbody>

          </table>

          <div class="row">
            <div class="col text-right">
                <div class="btn btn-success">
                  Passer Commande
                </div>
            </div>
          </div>

        </div>
      </div>
  </div>


  <%- include('partials/footer') %>